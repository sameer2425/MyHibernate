<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
          
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://127.0.0.1:5432/mydb</property>
		<property name="connection.username">postgres</property>
		<property name="connection.insecureAuth">false</property>
		<property name="connection.password">admin</property>
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<mapping class="com.sameer.hibernate.model.Customer" />
		<!-- <mapping class="com.sameer.hibernate.model.Student"/> -->
		<!-- <mapping class="com.sameer.hibernate.model.MyStudent"/>
		<mapping class="com.sameer.hibernate.model.CurrentStudents"/>
		<mapping class="com.sameer.hibernate.model.OldStudents"/>
		<mapping class="com.sameer.hibernate.model.WeekdaysStudents"/>
		<mapping class="com.sameer.hibernate.model.WeekendStudents"/> -->
		<!-- <mapping class="com.sameer.hibernate.model.MyCustomer"/> -->
		<!-- <mapping class="com.sameer.hibernate.model.Address"/> -->
		<!-- <mapping class="com.sameer.hibernate.model.Request"/> -->
		<!-- <mapping class="com.sameer.hibernate.model.Student1"/>
		<mapping class="com.sameer.hibernate.model.Course"/> -->
		<!-- <mapping class="com.sameer.hibernate.model.Customer1" />
		<mapping class="com.sameer.hibernate.model.Address1" /> -->
	</session-factory>
</hibernate-configuration>          